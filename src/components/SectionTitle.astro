---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-12">
  <h2 class="text-3xl font-bold tracking-wide text-stone-900">{title}</h2>
  {subtitle && <p class="mt-2 text-stone-500">{subtitle}</p>}
  <div class="mt-4 w-12 h-0.5 bg-stone-900 mx-auto"></div>
</div>
